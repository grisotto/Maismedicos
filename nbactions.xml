<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>spring-boot:run</goal>
        </goals>
        <properties>
            <run.mainClass>br.ufg.jatai.fsw.squest.SQuestApplication</run.mainClass>
            <run.arguments>--spring.devtools.restart.trigger-file=.nbReloadTrigger</run.arguments>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>spring-boot:run</goal>
        </goals>
        <properties>
            <run.jvmArguments>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</run.jvmArguments>
            <run.mainClass>br.ufg.jatai.fsw.squest.SQuestApplication</run.mainClass>
            <jpda.listen>true</jpda.listen>
            <run.arguments>--spring.devtools.restart.trigger-file=.nbReloadTrigger</run.arguments>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-classpath %classpath br.ufg.jatai.fsw.squest.SQuestApplication</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
            <actionName>build</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>install</goal>
                <goal>exec:exec</goal>
            </goals>
        </action>
</actions>
